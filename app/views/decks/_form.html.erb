<%= form_tag decks_path do %>

  <%= label_tag 'deck[name]', "Deck Name" %>
  <%= text_field_tag 'deck[name]', @deck.name %><br/>

  <%= label_tag 'deck[description]', "Deck Description" %>
  <%= text_field_tag 'deck[description]' %><br/>
  <% 2.times do %>
    <fieldset>
      
      <%= label_tag 'cards[][name]', "Card Name" %>
      <%= text_field_tag 'cards[][name]' %><br/>
      
      <%= label_tag 'cards[][strength]', "Card Strength" %>
      <%= number_field_tag 'cards[][strength]' %><br/> 
    
    </fieldset>
  <% end %>
  <%= submit_tag "Create Deck" %>

<% end %>


